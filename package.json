{
	"name": "@elsikora/setup-wizard",
	"version": "2.8.0-dev.2",
	"description": "Setup Wizard - CLI scaffolding utility",
	"keywords": [
		"cli",
		"setup",
		"wizard",
		"typescript",
		"openai",
		"generator"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ElsiKora/Setup-Wizard.git"
	},
	"license": "MIT",
	"author": "ElsiKora",
	"type": "module",
	"bin": {
		"setup-wizard": "./bin/index.js"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"branch": "npx @elsikora/git-branch-lint -b",
		"prebuild": "rimraf dist",
		"build": "npm run prebuild && rollup -c",
		"commit": "cz",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./",
		"lint:all": "npm run lint && npm run lint:types",
		"lint:all:fix": "npm run lint:fix && npm run lint:types:fix",
		"lint:fix": "eslint --fix ./",
		"lint:types": "tsc --noEmit",
		"lint:types:fix": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"release": "semantic-release",
		"test:all": "npm run test:unit && npm run test:e2e",
		"test:e2e": "npm run build && vitest --config vitest.config.e2e.js --typecheck.tsconfig tsconfig.json",
		"test:unit": "vitest run test/unit --config vitest.config.unit.js"
	},
	"config": {
		"commitizen": {
			"path": "@elsikora/commitizen-plugin-commitlint-ai"
		}
	},
	"dependencies": {
		"commander": "^14.0.3",
		"cosmiconfig": "^9.0.0",
		"javascript-stringify": "^2.1.0",
		"ora": "^9.3.0",
		"prompts": "^2.4.2",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@commitlint/types": "^20.4.0",
		"@elsikora/commitizen-plugin-commitlint-ai": "^2.5.0",
		"@elsikora/eslint-config": "^3.10.0",
		"@elsikora/git-branch-lint": "^1.2.2",
		"@elsikora/prlint": "^1.0.1",
		"@eslint-react/eslint-plugin": "^1.53.1",
		"@next/eslint-plugin-next": "^16.1.6",
		"@rollup/plugin-typescript": "^12.3.0",
		"@saithodev/semantic-release-backmerge": "^4.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.6",
		"@semantic-release/npm": "^13.1.4",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@tanstack/eslint-plugin-query": "^5.91.4",
		"@tanstack/eslint-plugin-router": "^1.155.0",
		"@testing-library/dom": "^10.4.1",
		"@types/inquirer": "^9.0.9",
		"@types/node": "^25.2.3",
		"@types/prompts": "^2.4.9",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"c8": "^10.1.3",
		"chalk": "^5.6.2",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"eslint": "^9.39.2",
		"eslint-plugin-n": "^17.24.0",
		"husky": "^9.1.7",
		"inquirer": "^13.2.5",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.3",
		"rollup": "^4.57.1",
		"semantic-release": "^25.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
